<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-black"
        android:text="درجات الطالب        "
        android:textAlignment="viewEnd"
        android:textColor="#000000"
        android:textSize="45sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="#3ca59d"
        android:ems="10"
        android:hint="Quizes %15"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed2"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="#3ca59d"
        android:ems="10"
        android:hint="Homework %25"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed3"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="#3ca59d"
        android:ems="10"
        android:hint="Mid terms %30"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ed4"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:background="#3ca59d"
        android:ems="10"
        android:hint="Final %30"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="#8DC3CA"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bu2"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:backgroundTint="#5a3d55"
        android:fontFamily="casual"
        android:text="CALCULATE"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp" />


    <Button
        android:id="@+id/button1"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:backgroundTint="#5a3d55"
        android:fontFamily="casual"
        android:text="reset "
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="#000000"
        android:backgroundTint="#e79c2a"
        android:breakStrategy="simple"
        android:fontFamily="casual"
        android:text=""
        android:textColor="#000000"
        android:textSize="50sp" /><![CDATA[

        />
]]>
</LinearLayout>


